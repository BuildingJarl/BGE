#version 330                                                                        
                                                                                    
layout (location = 0) in vec3 Position;                                             
layout (location = 1) in vec3 Normal;                                               
layout (location = 2) in vec3 TexColour;                                             
                                                                                    
uniform mat4 gWVP;                                                                  
uniform mat4 gWorld;                                                                
                                                                                    
out vec3 TexColour0;                                                                 
out vec3 Normal0;                                                                   
                                                                                    
void main()                                                                         
{                                                                                   
    gl_Position = gWVP * vec4(Position, 1.0);                                       
    TexColour0 = TexColour;                                                           
    Normal0 = (gWorld * vec4(Normal, 0.0)).xyz;                                     
}